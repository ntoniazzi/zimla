insert_final_newline = true


[*.{js,jsx,ts,tsx,vue}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
charset = "utf-8"

[*.php]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
